<script>
  // Gets the scrolling container
  const carousel = document.getElementById('inner-carousel');
  const wrapper = document.getElementById('robot-carousel-container');
  
  let currentSlide = 1;
  const totalSlides = 6;
  let intervalId;

  const startAutoScroll = () => {
    intervalId = setInterval(() => {
      // Advance slide index
      currentSlide = currentSlide >= totalSlides ? 1 : currentSlide + 1;
      const target = document.getElementById(`slide${currentSlide}`);
      
      if (target && carousel) {
        // FIXED: Scrolls the carousel container ONLY, not the window
        carousel.scrollTo({
          left: target.offsetLeft,
          behavior: 'smooth'
        });
      }
    }, 3500); 
  };

  const stopAutoScroll = () => {
    if (intervalId) clearInterval(intervalId);
  };

  // Start logic
  startAutoScroll();

  // Pause on hover
  if (wrapper) {
    wrapper.addEventListener('mouseenter', stopAutoScroll);
    wrapper.addEventListener('mouseleave', startAutoScroll);
  }
</script>