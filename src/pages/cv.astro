            {/* Manual Navigation */}
            <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <a href={`#slide${i === 0 ? 6 : i}`} class="btn btn-circle btn-sm btn-neutral bg-opacity-50 border-none text-white">❮</a> 
              <a href={`#slide${i === 5 ? 1 : i + 2}`} class="btn btn-circle btn-sm btn-neutral bg-opacity-50 border-none text-white">❯</a>
            </div>
            {/* Label */}
