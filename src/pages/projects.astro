---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Autoencoders"
    img="https://github.com/JHermosillaD/jhermosillad.github.io/blob/main/public/structure.png?raw=true"
    desc="An autoencoders exploration, covering hyperparameter tuning, deep, sparse, and denoising architectures, and their use in anomaly detection."
    url="https://nbviewer.org/github/JHermosillaD/Autoencoders/blob/main/Autoencoder.ipynb#"
    badge="Machine Learning"
  />

  <HorizontalCard
    title="Forecasting"
    img="https://github.com/JHermosillaD/jhermosillad.github.io/blob/main/public/data_mexico.png?raw=true"
    desc="A Mexican PIB forecasting exploration, comparing Long Short-Term Memory (LSTM) and Gated Recurrent Unit (GRU) architectures to model the Mexican Financial and Insurance Services sector."
    url="https://nbviewer.org/github/JHermosillaD/Mexican_forecasting/blob/main/analysis.ipynb#"
    badge="Machine Learning"
  />
  
  <HorizontalCard
    title="ROS pose estimate"
    img="https://github.com/JHermosillaD/pose_estimate_demo/blob/main/demo-min.png?raw=true"
    desc="A ROS package for the detection and estimation of a person's position."
    url="https://github.com/JHermosillaD/pose_estimate_demo"
    badge="Robotics"
  />

  <HorizontalCard
    title="ROS HRI simulator"
    img="https://github.com/JHermosillaD/hri_tiago_simulator/blob/main/demo-min.png?raw=true"
    desc="Simulator of simple interactions using tiago and moving actors."
    url="https://github.com/JHermosillaD/hri_tiago_simulator"
    badge="Robotics"
  />

  <HorizontalCard
    title="ID3 implementation"
    img="https://github.com/JHermosillaD/ID3/blob/main/data/output/menu.png?raw=true"
    desc="An implementation of the classic ID3 algorithm and a proposed improvement."
    url="https://github.com/JHermosillaD/ID3"
    badge="Artificial Intelligence"
  />

  <HorizontalCard
    title="Microalgae"
    img="https://github.com/JHermosillaD/Microalgae/blob/master/v-h-algas/Diffusion%20equation/image/v-h-agglgas-1.jpg?raw=true"
    desc="Study of the movement of the microalga Chlorococum sp."
    url="https://github.com/JHermosillaD/Microalgae"
    badge="Data Science"
  />

  <HorizontalCard
    title="Reinforcement learning"
    img="https://raw.githubusercontent.com/JHermosillaD/Reinforcement_learning/main/environment_simulator_V1/imgs/reward.png"
    desc="Reinforcement learning class notebooks at HAW Hamburgo university."
    url="https://github.com/JHermosillaD/Reinforcement_learning"
    badge="Machine Learning"
  />
</BaseLayout>
