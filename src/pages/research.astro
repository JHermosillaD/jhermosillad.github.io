<BaseLayout title="Research" sideBarActiveItemID="research" maxWidth="max-w-6xl">

  <div class="hero min-h-[65vh] bg-base-100">
    <div class="hero-content flex-col lg:flex-row gap-10">
      
      <div class="relative group">
        <div class="absolute -inset-1 bg-primary/20 rounded-2xl blur opacity-25 group-hover:opacity-50 transition duration-500"></div>
        <Image 
          src="/profile/interaction.png" 
          width={400} 
          height={500} 
          format="webp"
          class="relative max-w-sm rounded-xl shadow-2xl object-cover" 
